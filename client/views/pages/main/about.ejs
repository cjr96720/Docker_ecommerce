<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <%- include('../../partials/header') -%>
        <%- include('../../partials/styles') -%>
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap');

                * {
                    margin: 0;
                    padding: 0;
                    box-sizing: border-box;
                }

                .center {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                .m {
                    height: 80vh;
                    font-family: 'Josefin Sans', sans-serif;
                }

                .box {
                    width: 250px;
                    height: 250px;
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 288);
                    border-radius: 25px;
                    flex-direction: column;
                    color: black;
                    position: relative;
                    overflow: hidden;
                }

                .box img {
                    width: 100px;
                    height: 100px;
                    border-radius: 50px;
                }

                .user_name {
                    margin-top: 5px;
                    margin-bottom: 5px;
                    font-size: 20px;
                    text-align: center;
                }

                .title {
                    color: black;
                }

                .arr_container,
                .cancel {
                    position: absolute;
                    width: 50px;
                    height: 50px;
                    background: lightgray;
                    bottom: 0;
                    right: 0;
                    border-radius: 23px 0 23px 0;
                    color: rgb(70, 70, 70);
                    font-size: 1.6rem;
                    cursor: pointer;
                    transition: all .4s;
                }

                .arr_container i {
                    transform: rotate(45deg);
                }

                .active_arr {
                    transform: translate(80%, 80%)
                }

                .left_container {
                    position: absolute;
                    background: white;
                    width: 100%;
                    height: 100%;
                    border-radius: 23%;
                    padding: 40px 0 0 20px;
                    transition: all .4s;
                }

                .off {
                    transform: translate(-80%, -80%) rotate(90deg);
                }

                .active {
                    transform: translate(0) rotate(0);
                }

                .left_container p {
                    margin-bottom: 15px;
                    font-size: 1.2rem;
                }

                .left_container .skills div {
                    display: inline-block;
                    color: rgb(155, 155, 155);
                    border: 1px solid rgb(155, 155, 155);
                    padding: 5px 10px;
                    font-size: 12px;
                    margin: 4px 4px 4px 0;
                }

                .left_container .icons {
                    font-size: 20px;
                    margin-top: 10px;
                }

                .left_container .icons i {
                    color: #cfcfcf;
                    cursor: pointer;
                    margin-left: 10px;
                    transition: all .4s;
                }

                .left_container .icons i:hover {
                    color: #2c5364;
                }
            </style>
</head>

<body>
    <%- include('../../partials/navbar.ejs') -%>
        <!-- <div class="main">
            <h1 class="fontCaveat" style="font-size: 46px; text-align: center; margin-top: 10px;">About</h1>
        </div> -->
        <div class="m center">
            <div class="box center">
                <img src="/images/profile.png" alt="404">
                <div>
                    <p class="user_name">Chris Chen</p>
                    <p class="title">CEO & Founder & Trash Talker</p>
                </div>
                <div class="arr_container center">
                    <i class="fa fa-arrow-right"></i>
                </div>
                <div class="left_container off">
                    <p style="font-size: 18px;">Skills</p>
                    <div class="skills">
                        <div>Python</div>
                        <div>JaveScript</div>
                        <div>MySQL</div>
                        <div>Nodejs</div>
                        <div>HTML</div>
                        <div>Trash Talk</div>
                    </div>
                    <div class="icons">
                        <i class="fa fa-github"></i>
                        <i class="fa fa-linkedin"></i>
                        <i class="fa fa-twitter"></i>
                        <i class="fa fa-facebook"></i>
                    </div>
                    <div class="cancel center">
                        <i class="fa fa-times"></i>
                    </div>
                </div>
            </div>

        </div>

        <%- include('../../partials/scripts') -%>
            <script>
                $('.arr_container').click(() => {
                    $('.arr_container').addClass("active_arr");
                    if ($('.left_container').hasClass("off")) {
                        $('.left_container').removeClass("off");
                        $('.left_container').addClass("active");
                    }
                })

                $('.cancel').click(() => {
                    $('.arr_container').removeClass("active_arr");
                    if ($('.left_container').hasClass("active")) {
                        $('.left_container').removeClass("active");
                        $('.left_container').addClass("off");
                    }
                })


            </script>
</body>

</html>